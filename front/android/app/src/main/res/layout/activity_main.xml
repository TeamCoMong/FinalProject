            <FrameLayout
                    android:id="@+id/tmapLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            <ImageView
                    android:id="@+id/zoomInImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/zoom_in_btn_select"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                    android:id="@+id/zoomOutImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/zoom_out_btn_select"
                    app:layout_constraintStart_toStartOf="@id/zoomInImage"
                    app:layout_constraintTop_toBottomOf="@id/zoomInImage" />

            <LinearLayout
                    android:id="@+id/infoContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#80FFFFFF"
                    android:padding="8dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                <TextView android:id="@+id/zoomLevelText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textColor="@android:color/black" android:textSize="15sp" android:padding="4dp"/>
                <TextView android:id="@+id/latitudeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textColor="@android:color/black" android:textSize="15sp" android:padding="4dp"/>
                <TextView android:id="@+id/longitudeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textColor="@android:color/black" android:textSize="15sp" android:padding="4dp"/>
                <TextView android:id="@+id/rotationText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Rotate: 0" android:textColor="@android:color/black" android:textSize="15sp" android:padding="4dp"/>
                <TextView android:id="@+id/pinchText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" android:textColor="@android:color/black" android:textSize="15sp" android:padding="4dp"/>
            </LinearLayout>

            <ImageView android:id="@+id/locationImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/location_btn_selector" app:layout_constraintTop_toBottomOf="@id/infoContainer" app:layout_constraintEnd_toEndOf="@id/infoContainer"/>
            <ImageView android:id="@+id/centerIconImage" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/plus" app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"/>
            <TextView android:id="@+id/centerText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginBottom="10dp" android:background="@android:color/black" android:padding="10dp" android:textColor="@android:color/white" android:textSize="15dp" app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"/>

            <!-- 자동완성 -->
            <LinearLayout android:id="@+id/autoCompleteLayout" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="10dp" android:background="@android:color/white" android:visibility="gone">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="자동완성" android:textColor="@android:color/black" android:textSize="20dp"/>
                <EditText android:id="@+id/autoCompleteEdit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
                <ListView android:id="@+id/autoCompleteListView" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>

            <LinearLayout android:id="@+id/autoComplete2Layout" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical" android:padding="10dp" android:background="@android:color/white" android:visibility="gone">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="자동완성 V2" android:textColor="@android:color/black" android:textSize="20dp"/>
                <EditText android:id="@+id/autoComplete2Edit" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="10dp"/>
                <ListView android:id="@+id/autoComplete2ListView" android:layout_width="match_parent" android:layout_height="match_parent"/>
            </LinearLayout>

            <!-- 경로 정보 -->
            <LinearLayout android:id="@+id/routeLayout" android:layout_width="match_parent" android:layout_height="100dp" android:orientation="vertical" android:gravity="center" android:background="@android:color/white" android:visibility="gone" app:layout_constraintBottom_toBottomOf="parent">
                <TextView android:id="@+id/routeDistanceText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:textSize="15dp"/>
                <TextView android:id="@+id/routeTimeText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:textSize="15dp" android:layout_marginTop="5dp"/>
                <TextView android:id="@+id/routeFareText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@android:color/black" android:textSize="15dp" android:layout_marginTop="5dp"/>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

